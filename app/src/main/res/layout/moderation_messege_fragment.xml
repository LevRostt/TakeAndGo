    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_noradius_light_style"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/border_noradius_light_style"
            android:gravity="center"
            android:paddingHorizontal="6dp"
            android:text="Радиус\nоткрытия:\n(в метрах) "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/placeRadius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:hint="Введите радиус"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="343dp"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_noradius_light_style"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/border_noradius_light_style"
            android:gravity="center"
            android:paddingStart="12dp"
            android:text="Description\nto\nmoder: "
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/place_comment_to_moder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:hint="@string/addDescription"
            android:maxLines="4"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/push_to_btn"
        android:layout_width="203dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border_green_left_to_right"
        android:orientation="horizontal"
        android:text="Send to moderation!"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_border_grey"
        android:orientation="horizontal"
        android:text="cancel"
        android:textAllCaps="false"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/push_to_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>